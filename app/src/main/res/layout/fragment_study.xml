        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI布局"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android动画详解"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View事件分发和处理流程"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rxjava-观察者模式"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rxjava-事件变换"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rxjava-线程切换"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文本文件的输入输出处理"
