        android:textSize="17sp"
        android:padding="5dp"
        />

    <com.mike.demo.customizeview.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/chocolate"
            android:padding="5dp"
            android:text="Handler-Looper"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计模式-代理"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计模式-工厂模式"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计模式-单例设计模式"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计模式-builder设计模式"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计模式-装饰设计模式"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计模式-观察者模式"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线程池使用"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EventBus"
            android:padding="5dp"
            android:background="@color/chocolate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
